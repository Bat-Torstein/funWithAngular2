{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "baseUrl": "",
    "paths": { "app": [ "app" ] }
  },
  "compileOnSave": true,
  "include": [
    "app/*.ts",
    "app/**/*.ts",
    "tests/**/*.ts",
    "typings/*.ts"
  ]
}